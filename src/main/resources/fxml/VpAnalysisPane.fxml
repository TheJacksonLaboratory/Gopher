<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fx:id="VpAnalysisPane"
            fitToHeight="true"
            fitToWidth="true"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="gopher.controllers.VPAnalysisController">
    <StackPane alignment="TOP_CENTER">
        <VBox alignment="TOP_CENTER" maxWidth="1200.0" minHeight="600.0" minWidth="1105.0" prefWidth="1200.0">
            <VBox alignment="TOP_CENTER">
                <Label styleClass="toplabel" stylesheets="@../css/vpanalysis.css" text="Panel design summary"/>
                <HBox fx:id="listviewHbox" alignment="TOP_CENTER" prefHeight="120.0" prefWidth="1105.0">
                    <ListView fx:id="lviewKey" minHeight="175.0" prefHeight="170.0" prefWidth="200.0"/>
                    <ListView fx:id="lviewValue" minHeight="175.0" prefHeight="170.0" prefWidth="905.0"/>
                </HBox>
            </VBox>

            <TableView fx:id="viewPointTableView" stylesheets="@../css/vpanalysis.css" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="actionTableColumn" editable="false" maxWidth="105.0" minWidth="105.0"
                                 prefWidth="105.0" resizable="false" text="Viewpoint"/>
                    <TableColumn fx:id="targetTableColumn" editable="false" maxWidth="100.0" minWidth="80.0"
                                 prefWidth="-1.0" styleClass="mycolumntarget" text="Target"/>
                    <TableColumn fx:id="genomicLocationColumn" editable="false" maxWidth="1.7976931348623157E308"
                                 minWidth="100.0" prefWidth="150.0" styleClass="mycolumn" text="Genomic location"/>
                    <TableColumn fx:id="nSelectedTableColumn" maxWidth="1.7976931348623157E308" minWidth="110.0"
                                 prefWidth="-1.0" styleClass="mycolumn" text="# Selected"/>
                    <TableColumn fx:id="viewpointScoreColumn" maxWidth="1.7976931348623157E308" minWidth="100.0"
                                 prefWidth="-1.0" styleClass="mycolumn" text="Score"/>
                    <TableColumn fx:id="viewpointTotalLengthOfActiveSegments" maxWidth="1.7976931348623157E308"
                                 minWidth="100.0" prefWidth="-1.0" styleClass="mycolumn" text="Active length"/>
                    <TableColumn fx:id="viewpointTotalLength" maxWidth="1.7976931348623157E308" minWidth="100.0"
                                 prefWidth="-1.0" styleClass="mycolumn" text="Total length"/>
                    <TableColumn fx:id="fragmentOverlappingTSSColumn" maxWidth="1.7976931348623157E308"
                                 minWidth="120.0" prefWidth="-1.0" styleClass="mycolumn" text="Fragment at TSS"/>
                    <TableColumn fx:id="manuallyRevisedColumn" maxWidth="1.7976931348623157E308" minWidth="100.0"
                                 prefWidth="-1.0" styleClass="mycolumn" text="Manually revised"/>
                    <TableColumn fx:id="deleteTableColumn" maxWidth="80.0" minWidth="80.0" resizable="false"
                                 text="Delete"/>
                    <TableColumn fx:id="resetTableColumn" maxWidth="100.0" minWidth="100.0" prefWidth="100.0"
                                 text="Reset"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </VBox>
    </StackPane>
</ScrollPane>
