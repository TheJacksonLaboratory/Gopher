<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<AnchorPane fx:id="pane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gopher.gui.splash.SplashPresenter">
    <HBox prefHeight="100.0" prefWidth="600.0">
        <AnchorPane prefHeight="100.0" prefWidth="604.0">
            <Label styleClass="popup-label" stylesheets="@splash.css" text="Welcome to GOPHER" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="10.0" />
        </AnchorPane>
    </HBox>
    <GridPane layoutX="24.0" prefHeight="270.0" prefWidth="495.0" AnchorPane.leftAnchor="40.0" AnchorPane.topAnchor="100.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="10.0" prefWidth="150.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="204.0" minWidth="181.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="164.0" minWidth="10.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints maxHeight="127.0" minHeight="10.0" prefHeight="127.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="159.0" minHeight="0.0" prefHeight="98.0" vgrow="SOMETIMES" />
        </rowConstraints>
        <ImageView fx:id="openFileView" />
        <ImageView fx:id="newFileView" GridPane.rowIndex="1" />
        <Button fx:id="newProjectButton" minWidth="150.0" mnemonicParsing="false" onAction="#newProject" styleClass="popup-label" stylesheets="@splash.css" text="New project" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets left="20.0" />
            </GridPane.margin>
            <padding>
                <Insets left="5.0" right="5.0" />
            </padding>
        </Button>
        <ChoiceBox fx:id="projectBox" minHeight="35.0" minWidth="150.0" styleClass="cb" stylesheets="@splash.css" GridPane.columnIndex="1">
            <GridPane.margin>
                <Insets left="20.0" />
            </GridPane.margin>
        </ChoiceBox>
        <Button minWidth="150.0" mnemonicParsing="false" onAction="#openExistingProject" styleClass="popup-label" stylesheets="@splash.css" text="Open project" GridPane.columnIndex="2">
            <GridPane.margin>
                <Insets left="20.0" />
            </GridPane.margin>
        </Button>
        <ImageView />
    </GridPane>
</AnchorPane>
